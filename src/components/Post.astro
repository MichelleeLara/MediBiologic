---
const { title, desc, date, category, url } = Astro.props
---

<article class="shadow-lg w-fit rounded-xl">
    <img src={url} alt="" class=" w-full rounded-tl-xl rounded-tr-xl">
    <div class="p-6 flex gap-2 flex-col">
        <h2 class="font-semibold text-lg min-h-[84px]">{title}</h2>
        <p class="text-gray-700 text-sm text-wrap">{desc}</p>
        <div class="flex gap-3 items-center mt-4">
            <div class="py-0.5 px-2.5 text-sm rounded-xl bg-tertiary bg-opacity-15 w-fit text-tertiary">{category}</div>
            <p class="text-xs font-medium">{date}</p>
        </div>
    </div>
</article>