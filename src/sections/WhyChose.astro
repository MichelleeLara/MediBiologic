---
import CtaPrimary from "@/components/Cta_primary.astro";
import FactChose from "@/components/FactChose.astro";
import { getI18N } from "@/i18n/"

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<section class="h-min flex items-center justify-center relative pb-16 overflow-hidden">
    <div class="mx-5 max-w-screen-xl w-full flex flex-col gap-12 items-center justify-center">
        
        <div class="flex flex-col gap-3 w-full items-center text-center text-balance">
            <p class="font-semibold text-tertiary">{i18n.Why_Choose_Us.SUBTITLE}</p>
            <h2 class="text-4xl font-semibold">{i18n.Why_Choose_Us.TITLE}</h2>
            <p class="text-gray-600 flex gap-2 mt-2 text-pretty max-w-[900px]">{i18n.Why_Choose_Us.DESCRIPTION}</p>
        </div>

        <footer class="flex gap-3 flex-col md:flex-row md:gap-10">
            <div class="flex flex-col gap-3 bg-red- sm:items-center  md:items-start">
                {i18n.Why_Choose_Us.FACTS.slice(0, 3).map((fact) => (
                    <FactChose title={fact}/>
                ))}
            </div>
            <div class="flex flex-col gap-3 bg-red- sm:items-center md:items-start">
                {i18n.Why_Choose_Us.FACTS.slice(3).map((fact) => (
                    <FactChose title={fact}/>
                ))}
            </div>
        </footer>

        <a class="flex items-center text-center justify-center gap-3 px-5 py-2.5 rounded-full text-pretty bg-tertiary text-white">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24" color="current" fill="none">
